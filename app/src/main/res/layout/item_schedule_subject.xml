<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "58dp">

    <TextView
        android:id = "@+id/no_subject_view"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "16dp"
        android:text = "@string/no_subject_text"
        android:textSize = "15sp"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintStart_toEndOf = "@+id/order_text"
        app:layout_constraintTop_toTopOf = "parent" />

    <TextView
        android:id = "@+id/subject_name"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "16dp"
        android:textColor = "@color/black"
        android:textSize = "15sp"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintStart_toEndOf = "@+id/order_text"
        app:layout_constraintTop_toTopOf = "parent"
        tools:text = "Социология" />

    <TextView
        android:id = "@+id/subject_type"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:textColor = "@color/black"
        android:textSize = "17sp"
        app:layout_constraintBottom_toTopOf = "@+id/subject_descr"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintTop_toTopOf = "parent"
        app:layout_constraintVertical_chainStyle = "packed"
        tools:text = "практика" />

    <TextView
        android:id = "@+id/subject_descr"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "4dp"
        android:textSize = "14sp"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/subject_type"
        tools:text = "Василий Петрович" />

    <TextView
        android:id = "@+id/order_text"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textColor = "@color/black"
        android:textSize = "18sp"
        android:textStyle = "bold"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent"
        tools:text = "1" />

</androidx.constraintlayout.widget.ConstraintLayout>